.page-header
  %h1 Add New Item

= form_for @item do |f|

  .form-group
    = f.lable :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control'

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to "Cancel", list_path(@list), class: 'btn btn-info'
