.page-header
  %h1 List

%h2= @list.title

%table.table.table-striped
  %thead
    %tr
      %th Item
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name

= link_to "Back", lists_path, class: 'btn btn-info'
= link_to "Edit", edit_list_path(@list), class: 'btn btn-default'
= link_to "Add Items", list_add_item_path(@list), class: 'btn btn-default'
= link_to "Remove Items", list_remove_items_path(@list), class: 'btn btn-default'
= link_to "Delete", list_path(@list), method: :delete, class: 'btn btn-danger'
