.page-header
  %h1 Add New Item

%h2= @list.title

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Item
  %tbody
    - @items.each do |item|
      %tr
        %td= item.id
        %td= item.name

= form_for @item, url: {action: "add", params: {id: @list.id}} do |f|

  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control'

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to "Back", list_path(@list), class: 'btn btn-info'
